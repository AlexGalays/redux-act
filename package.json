  },
  "repository": {
    "type": "git",
    "url": "https://github.com/pauldijou/redux-act"
  },
  "bugs": {
    "url": "https://github.com/pauldijou/redux-act/issues"
  },
  "devDependencies": {
    "babel": "^5.8.21",
    "babel-loader": "^5.1.4",
    "chai": "^3.0.0",
    "chai-spies": "^0.7.1",
    "isparta": "^3.0.3",
    "mocha": "^2.2.5",
    "mocha-better-spec-reporter": "^2.1.0",
    "redux": "^3.0.0",
    "redux-logger": "^2.4.0",
    "redux-thunk": "^1.0.0",
    "rimraf": "^2.4.2"
