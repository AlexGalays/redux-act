{
  "name": "redux-act",
  "version": "0.4.0",
  "license": "Apache-2.0",
  "description": "An opinionated lib to create actions and reducers for Redux",
  "keywords": [
    "redux",
    "flux",
    "action",
    "reducer",
    "batch"
